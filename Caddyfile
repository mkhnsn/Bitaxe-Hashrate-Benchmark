# Catch-all for any hostname the Pi is reached by
# (Tailscale hostname, .local, IP, etc.)
:80 {
	handle /bitaxe/* {
		uri strip_prefix /bitaxe
		reverse_proxy bitaxe-benchmark:8000
	}
	handle /bitaxe {
		redir /bitaxe/ permanent
	}

	# Add more services here, e.g.:
	# handle /other-app/* { ... }

	# Default: simple landing or 404
	respond "garage pi" 200
}
